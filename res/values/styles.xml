<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.tlc" parent="@style/Holo.Theme.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_tlc</item>
        <item name="popupMenuStyle">@style/tlc_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/tlc_DropDownListView</item>
        <item name="actionBarTabStyle">@style/tlc_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/tlc_DropDownNav</item>
        <item name="actionBarStyle">@style/tlc_solid_ActionBar</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_tlc</item>
        <item name="android:popupMenuStyle">@style/tlc_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/tlc_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/tlc_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/tlc_DropDownNav</item>
        <item name="android:actionBarStyle">@style/tlc_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_tlc</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.tlc.widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.tlc.widget</item>

    </style>

    <style name="tlc_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_tlc</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_tlc</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_tlc</item>
        <item name="progressBarStyle">@style/tlc_ProgressBar</item>

        <item name="android:background">@drawable/ab_solid_tlc</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_tlc</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_tlc</item>
        <item name="android:progressBarStyle">@style/tlc_ProgressBar</item>
    </style>

    <style name="tlc_transparent_ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_tlc</item>
        <item name="progressBarStyle">@style/tlc_ProgressBar</item>
        
        <item name="android:background">@drawable/ab_transparent_tlc</item>
        <item name="android:progressBarStyle">@style/tlc_ProgressBar</item>
    </style>
	
    <style name="tlc_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:textColor">@color/white_tlc</item>		
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tlc</item>
    </style>
	
    <style name="tlc_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tlc</item>
    </style>

    <style name="tlc_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_tlc</item>

        <item name="android:background">@drawable/tab_indicator_ab_tlc</item>
    </style>
	
    <style name="tlc_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_tlc</item>

        <item name="android:background">@drawable/spinner_background_ab_tlc</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tlc</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tlc</item>
    </style>
    
    <style name="tlc_ProgressBar" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tlc</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.tlc.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/tlc_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/tlc_DropDownListView</item>
        
        <item name="android:popupMenuStyle">@style/tlc_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/tlc_DropDownListView</item>
    </style>

</resources>